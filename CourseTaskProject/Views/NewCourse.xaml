<UserControl x:Class="CourseTaskProject.Views.NewCourse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Height="auto" Width="auto" Background="WhiteSmoke">

    <Grid Margin="5,5,5,0" >
        <StackPanel>
            <TextBlock>Course Code</TextBlock>
            <Grid>
                <TextBox Name="CourseCode">

                </TextBox>
            </Grid>
            <TextBlock>Course Section</TextBlock>
            <Grid>
                <TextBox Name="CourseSection">

                </TextBox>
            </Grid>
            <TextBlock>Course Name</TextBlock>
            <Grid>
                <TextBox Name="CourseTitle">

                </TextBox>
            </Grid>
            <TextBlock>Course Description</TextBlock>
            <Grid>
                <TextBox TextWrapping="Wrap" MinHeight="100" Name="CourseDesc">

                </TextBox>
            </Grid>
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width=".3*"/>
                </Grid.ColumnDefinitions>
                
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
